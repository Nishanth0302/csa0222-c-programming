	y=(x*0.02);
	printf("salary:%d\n",x);
	printf("bonus:%d\n",y);
	x+=y;
	if(x<10000)
	printf("\n due to saalary is less than 10000 extra bonus is added %d",z);
	printf("\n total salary:%d\n",x);
	
